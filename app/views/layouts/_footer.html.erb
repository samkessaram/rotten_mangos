<footer>
  <small>
    <% if current_user %>
      Signed in as 
        <% if session[:admin] %>
          <%= link_to "Admin", admin_users_path  %>
        <% else %>
          <%= current_user.full_name %>
        <% end %>
          (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>