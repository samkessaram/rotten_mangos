<%= paginate @users %>

<%= link_to "Create new user", new_user_path %>

<table>
  <tr>
    <th>Name</th>
    <th>E-mail</th> 
    <th>Admin?</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><% if user.admin %></td>
        <td>Yes</td>
        <% else %>
        <td>No</td>
        <% end %>
      <td>(<%= link_to "delete", admin_users_path(id:user.id), method: :delete, data: { confirm: "Are you sure?" } %>)</td>
    </tr>
  <% end %>
</table>