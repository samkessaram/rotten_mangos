<div class="container">
  <h1>rotten mangos</h1>
  <%= link_to "Submit a movie!", new_movie_path %>
</div>

<hr>

<div class="container search-block">
  <%= form_tag movies_path, :method => 'get' do %>
    <div>
      <div class="form-field">
        <%= label_tag(:title, "Title:") %>
        <%= text_field_tag(:title) %>
      </div>
      <div class="form-field">
        <%= label_tag(:director, "Director:") %>
        <%= text_field_tag(:director) %>
      </div>
      <div class="form-field">
        <%= label_tag(:runtime_in_minutes, "Duration:") %>
        <%= select_tag :runtime_in_minutes, "<option value></option><option value='<90'>Less than 90 minutes</option><option value='90..120'>90 to 120 minutes</option><option value='>120'>More than 120 minutes</option>".html_safe %>
      </div>
      <div class="form-field">
        <%= submit_tag("Search") %>
      </div>
    </div>
  <% end %>
</div>


<div class="container show-movie">
<% @movies.each do |movie| %>
  <div class="movie-index">
    <%= render partial: 'movie', object: movie %>
  </div>
<% end %>
</div>

